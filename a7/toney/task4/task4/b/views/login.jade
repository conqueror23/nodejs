doctype html
html
  head
    title MongoDB example
  body
    h1 My first MongoDB app
    hr
    form(action="/login", method="POST")
      fieldset
        legend Log in
        p
          label Email
          input(name="email", type="text")
        p
          label Password
          input(name="password", type="password")
        p
          button Submit
        p
          a(href="/signup") Sign up
        
    block body